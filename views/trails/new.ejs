<%- include("../partials/header") %>

<h1 style="text-align:center">Share a New Trail</h1>
<div style="width:30%; margin: 25px auto">
	<form action="/trails" method="post">
		<div class="form-group">
			<input class="form-control" type="text" name="newTrail[name]" placeholder="name" />
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="newTrail[image]" placeholder="image url" />
		</div>
		<div class="form-group">
			<input class="form-control" type="number" name="newTrail[price]" placeholder="price" min="0.01" step="0.01"/>
		</div>
		<div class="form-group">
			<textarea class="form-control" type="text" name="newTrail[description]" placeholder="description" 
					  rows="8" ></textarea>
		</div>
		<div class="form-group">
			<label for="location">Location</label>
			<input class="form-control" type="text" id="location" name="newTrail[location]" placeholder="Yosemite National Park, CA" />
		</div>
		<div class="form-group">
			<button class="btn btn-lg btn-primary btn-block">
				Submit
			</button>
		</div>
	</form>
	<a href="/trails">Go Back</a>
</div>


<%- include("../partials/footer") %>