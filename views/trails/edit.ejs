<%- include("../partials/header") %>


<h1 style="text-align:center">Edit <%= trail.name %></h1>
<div style="width:30%; margin: 25px auto">
	<form action="/trails/<%= trail._id %>?_method=PUT" method="post">
		<div class="form-group">
			<input class="form-control" type="text" name="newTrail[name]" value="<%= trail.name %>" />
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="newTrail[image]" value="<%= trail.image %>" />
		</div>
		<div class="form-group">
			<input class="form-control" type="number" name="newTrail[price]" value="<%= trail.price %>" min="0.01" step="0.01"/>
		</div>
		<div class="form-group">
			<textarea class="form-control" type="text" name="newTrail[description]" rows="8" ><%= trail.description %></textarea>
		</div>
		<div class="form-group">
			<label for="location">Location</label>
			<input class="form-control" type="text" id="location" name="newTrail[location]" value="<%= trail.location %>" />
		</div>
		<div class="form-group">
			<button class="btn btn-lg btn-primary btn-block">
				Submit
			</button>
		</div>
	</form>
	<a href="/trails/<%= trail._id %>">Go Back</a>
</div>

<%- include("../partials/footer") %>